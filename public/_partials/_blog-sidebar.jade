  ul.divided
    - each article, slug in public.recetas._data
      - if (article.isFeatured)
        li
          // Highlight
          article.box.highlight
            header
              h3
                a(href='/recetas/#{slug}') #{article.title}
            a.image.left(href='/recetas/#{slug}')
              img(src='#{article.featuredImg}', alt='#{article.titlte}').
